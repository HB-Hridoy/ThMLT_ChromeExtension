{
  "manifest_version": 3,
  "name": "ThMLT Color Theme Editor",
  "version": "1.0",
  "description": "",
  "host_permissions": [
    "https://ai2.appinventor.mit.edu/*"
  ],
  "icons": {
    "16": "public/assets/icons/icon-16.png",
    "48": "public/assets/icons/icon-48.png",
    "128": "public/assets/icons/icon-128.png"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open ThMLT color theme editor"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/inject/BlockyManipulator.js",
        "src/content/inject/textFormatterModal.html",
        "src/content/inject/thmlt-content-script"
      ],
      "matches": [
        "https://ai2.appinventor.mit.edu/*"
      ]
    },
    {
      "resources": [
        "vendor/*.js",
        "src/core/*",
        "src/styles/*.css",
        "src/db/*.js",
        "src/utils/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ai2.appinventor.mit.edu/*"
      ],
      "js": [
        "src/content/thmlt-ai2-content-script.js"
      ],
      "run_at": "document_end"
    }
  ]
}